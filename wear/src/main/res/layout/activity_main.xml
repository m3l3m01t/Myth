<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        tools:context="com.visualstudio.m3l3m01t.myth.MainActivity"
        tools:deviceIds="wear">

    <TextView
            android:id="@+id/text"
            app:layout_box="all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_world"/>

    <ImageView
            android:src="@color/light_grey"
            android:layout_width="160dp"
            android:layout_height="160dp" android:id="@+id/imageView"
            android:layout_gravity="center_vertical|center_horizontal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="5dp"/>
    <TextView
            android:id="@+id/clock"
            app:layout_box="all"
            android:layout_gravity="bottom|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>

</android.support.wearable.view.BoxInsetLayout>
