<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="1dp">
    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/rounded">

        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp" android:id="@+id/ivContact"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFirstName"
                android:layout_toEndOf="@+id/ivContact"
                tools:text="Donald Trump" android:typeface="monospace" android:textStyle="bold|italic"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPhoneNum"
                android:layout_toEndOf="@+id/ivContact"
                android:layout_below="@id/tvFirstName"
                tools:text="+115618518909" android:phoneNumber="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail"
                android:layout_toEndOf="@+id/ivContact"
                android:layout_below="@id/tvPhoneNum"
                tools:text="donald.trump@usa.gov"/>
    </RelativeLayout>
</LinearLayout>